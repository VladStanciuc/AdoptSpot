@model AdoptSpot.Models.Pet

@{
    ViewData["Title"] = "Delete Pet";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this pet?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Name:</dt>
        <dd>@Model.Name</dd>
        <dt>Species:</dt>
        <dd>@Model.SpeciesType</dd>
        <dt>Age:</dt>
        <dd>@Model.Age</dd>
        <dt>Gender:</dt>
        <dd>@Model.PetGender</dd>
        <dt>Color:</dt>
        <dd>@Model.Color</dd>
        <dt>Breed:</dt>
        <dd>@Model.Breed</dd>
        <dt>Description:</dt>
        <dd>@Model.Description</dd>
    </dl>
</div>
<form asp-action="Delete" asp-controller="Pet" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
