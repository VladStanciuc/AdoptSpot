@model AdoptSpot.Models.Pet

@{
    ViewData["Title"] = "Pet Details";
}

<head>
    <style>
        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            grid-gap: 20px;
            padding: 20px;
        }

        .grid-item {
            display: flex;
            flex-direction: column;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            background-color: white;
        }

        .carousel {
            width: 100%;
            padding-top: 100%; /* 16:9 aspect ratio */
            position: relative;
            overflow: hidden;
        }

        .carousel-inner {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .pet-info {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .carousel-item {
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            width: 100%;
            height: 100%;
        }
    </style>
</head>

<h2>@ViewData["Title"]</h2>

<div class="grid-container">
    <div class="grid-item">
        <!-- Swiper -->
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="false">
            <div class="carousel-inner">
                @{
                    var first = true;
                }
                @foreach (var image in Model.Images)
                {
                <div class="carousel-item @(first?Html.Raw("active"):Html.Raw("")) item1" style="background-image: url('@Url.Action("GetImage", "Image", new { id = image.Id })')">
                </div>
                    first = false;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- End of Swiper -->
        <!-- Pet properties -->
        <div class="pet-info">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Species:</strong> @Model.Species</p>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Gender:</strong> @Model.PetGender</p>
            <p><strong>Color:</strong> @Model.Color</p>
            <p><strong>Breed:</strong> @Model.Breed</p>
            <p><strong>Description:</strong> @Model.Description</p>
        </div>
    </div>
</div>
