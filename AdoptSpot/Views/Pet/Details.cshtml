@model AdoptSpot.Models.Pet

@{
    ViewData["Title"] = "Pet Details";
}

<head>
    <style>
        .detail-container {
            display: flex;
            justify-content: space-between;
            padding: 20px;
        }

        .image-container {
            flex: 1;
            margin-right: 20px;
        }

        .info-container {
            flex: 1;
        }

        /* ...other styles remain the same... */
    </style>
</head>

<h2>@ViewData["Title"]</h2>

<div class="detail-container">
    <div class="image-container">
        <!-- Swiper -->
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="false">
            <div class="carousel-inner">
                @{
                    var first = true;
                }
                @foreach (var image in Model.Images)
                {
                    <div class="carousel-item @(first?Html.Raw("active"):Html.Raw("")) item1" style="background-image: url('@Url.Action("GetImage", "Image", new { id = image.Id })')">
                    </div>
                    first = false;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- End of Swiper -->
    </div>

    <div class="info-container">
        <!-- Pet properties -->
        <h3>@Model.Name</h3>
        <p><strong>Species:</strong> @Model.Species</p>
        <p><strong>Age:</strong> @Model.Age</p>
        <p><strong>Gender:</strong> @Model.PetGender</p>
        <p><strong>Color:</strong> @Model.Color</p>
        <p><strong>Breed:</strong> @Model.Breed</p>
        <p><strong>Description:</strong> @Model.Description</p>
    </div>
</div>
