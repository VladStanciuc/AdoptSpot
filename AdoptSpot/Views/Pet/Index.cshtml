@model IEnumerable<AdoptSpot.Models.Pet>

@{
    ViewData["Title"] = "Pets";
}
<head>
    <style>
        .grid-item {
            display: inline-block;
            vertical-align: top;
            width: calc(33.33% - 10px);
            height: 600px;
            margin-right: 20px;
            margin-bottom: 20px;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .carousel-inner {
            height: 100%;
        }

        .carousel-item img {
            object-fit: cover;
            width: 100%;
            height: 100%;
            border-radius: 16px 16px 0 0;
        }
        .pet-title {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 0 0 16px 16px;
        }

        .pet-info {
            padding: 20px;
            font-size: 14px;
        }


    </style>
</head>


<h2>@ViewData["Title"]</h2>

<div class="grid-container">
    @foreach (var pet in Model.Select((value, index) => new { value, index }))
    {
    <div class="grid-item">
        <!-- Swiper -->
        <div id="carouselExampleControls-@pet.index" class="carousel slide" data-ride="carousel" data-interval="false">

            <div class="carousel-inner">
                @{
                    var first = true;
                }
                @foreach (var image in pet.value.Images)
                {
                    <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))">
                        <img class="d-block w-100" src="@image." alt="@image.FileName">
                    </div>
                    first = false;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls-@pet.index" role="button" data-slide="prev">

                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls-@pet.index" role="button" data-slide="next">

                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- End of Swiper -->
        <div class="pet-title">@pet.value.Name</div>
        <!-- Pet properties -->
        <div class="pet-info">
            <p><strong>Species:</strong> @pet.value.Species</p>
            <p><strong>Age:</strong> @pet.value.Age</p>
            <p><strong>Gender:</strong> @pet.value.PetGender</p>
            <p><strong>Color:</strong> @pet.value.Color</p>
            <p><strong>Breed:</strong> @pet.value.Breed</p>
            <p><strong>Description:</strong> @pet.value.Description</p>
        </div>
    </div>
    }

</div>

