@model IEnumerable<AdoptSpot.Models.Pet>

@{
    ViewData["Title"] = "Pets";
}

<head>
    <style>
        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            grid-gap: 20px;
            padding: 20px;
        }

        .grid-item {
            display: flex;
            flex-direction: column;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            background-color: white;
        }

        .carousel {
            width: 100%;
            padding-top: 100%; /* 16:9 aspect ratio */
            position: relative;
            overflow: hidden;
        }

        .carousel-inner {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

      
        .pet-info {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .pet-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .pet-details {
            font-size: 14px;
            margin-bottom: 10px;
        }

        .pet-description {
            font-size: 14px;
            overflow-y: auto;
        }
        .carousel-item {
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            width: 100%;
            height: 100%;
        }

    </style>
</head>




<h2>@ViewData["Title"]</h2>

<div class="grid-container">
    @foreach (var pet in Model.Select((value, index) => new { value, index }))
    {
        <div class="grid-item">
            <!-- Swiper -->
            <div id="carouselExampleControls-@pet.index" class="carousel slide" data-ride="carousel" data-interval="false">

                <div class="carousel-inner">

                    @{
                        var first = true;
                    }
                    @foreach (var image in pet.value.Images)
                    {
                        <div class="carousel-item @(first?Html.Raw("active"):Html.Raw("")) item1" style="background-image: url('@Url.Action("GetImage", "Image", new { id = image.Id })')">
                        </div>

                        first = false;
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls-@pet.index" role="button" data-slide="prev">

                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls-@pet.index" role="button" data-slide="next">

                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <!-- End of Swiper -->
            <!-- Pet properties -->
            <div class="pet-info">
                <p><strong>Name:</strong> @pet.value.Name</p>
                <p><strong>Species:</strong> @pet.value.Species</p>
                <p><strong>Age:</strong> @pet.value.Age</p>
                <p><strong>Gender:</strong> @pet.value.PetGender</p>
                <p><strong>Color:</strong> @pet.value.Color</p>
                <p><strong>Breed:</strong> @pet.value.Breed</p>
                <p><strong>Description:</strong> @pet.value.Description</p>
            </div>
        </div>
    }

</div>
