@model AdoptSpot.Models.BreedTemperament
@using AdoptSpot.Data.Enums

<h2>Create New Breed Temperament</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="BreedId" class="control-label"></label>
        <select asp-for="BreedId" class="form-control" asp-items="ViewBag.BreedCharacteristics"></select>
        <span asp-validation-for="BreedId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TemperamentType" class="control-label"></label>
        <select asp-for="TemperamentType" class="form-control">
            @foreach (Temperament temperament in Enum.GetValues(typeof(Temperament)))
            {
                <option value="@temperament">@temperament</option>
            }
        </select>
        <span asp-validation-for="TemperamentType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Score" class="control-label"></label>
        <input asp-for="Score" class="form-control" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
